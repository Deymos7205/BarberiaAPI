@page "/roles/form/{Id:int?}"
@inject IRolService RolService
@inject NavigationManager Nav

<h3>@(Id == null ? "Nuevo Rol" : "Editar Rol")</h3>

<EditForm Model="ent" OnValidSubmit="Guardar">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <InputText @bind-Value="ent.Nombre" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Descripción</label>
        <InputTextArea @bind-Value="ent.Descripcion" class="form-control" rows="3" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <button type="button" class="btn btn-secondary ms-2" @onclick="() => Nav.NavigateTo("/roles")">Cancelar</button>
</EditForm>

@code {
    [Parameter] public int? Id { get; set; }
    private Rol ent = new();

    protected override async Task OnInitializedAsync()
    {
        if (Id.HasValue)
            ent = await RolService.ObtenerPorId(Id.Value);
    }

    private async Task Guardar()
    {
        if (Id == null)
            await RolService.Crear(ent);
        else
            await RolService.Actualizar(ent);

        Nav.NavigateTo("/roles");
    }
}
