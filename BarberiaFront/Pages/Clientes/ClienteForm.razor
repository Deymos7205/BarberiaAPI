@page "/clientes/form/{Id:int?}"
@inject IClienteService ClienteService
@inject NavigationManager Nav

<h3>@(Id == null ? "Nuevo Cliente" : "Editar Cliente")</h3>

<EditForm Model="ent" OnValidSubmit="Guardar">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <InputText @bind-Value="ent.Nombre" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Cédula</label>
        <InputText @bind-Value="ent.Cedula" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Teléfono</label>
        <InputText @bind-Value="ent.Telefono" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Dirección</label>
        <InputText @bind-Value="ent.Direccion" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Preferencias</label>
        <InputTextArea @bind-Value="ent.Preferencias" class="form-control" rows="2" />
    </div>

    <div class="mb-3">
        <label class="form-label">Fecha Registro</label>
        <InputDate @bind-Value="ent.FechaRegistro" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <button type="button" class="btn btn-secondary ms-2" @onclick="() => Nav.NavigateTo("/clientes")">Cancelar</button>
</EditForm>

@code {
    [Parameter] public int? Id { get; set; }
    private Cliente ent = new() { FechaRegistro = DateTime.Today };

    protected override async Task OnInitializedAsync()
    {
        if (Id.HasValue)
            ent = await ClienteService.ObtenerPorId(Id.Value);
    }

    private async Task Guardar()
    {
        if (Id == null)
            await ClienteService.Crear(ent);
        else
            await ClienteService.Actualizar(ent);

        Nav.NavigateTo("/clientes");
    }
}
