@page "/clientes/detalle/{Id:int}"
@inject IClienteService ClienteService

<h3>Detalle de Cliente</h3>

@if (cliente == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@cliente.Nombre</dd>

        <dt class="col-sm-3">Cédula</dt>
        <dd class="col-sm-9">@cliente.Cedula</dd>

        <dt class="col-sm-3">Teléfono</dt>
        <dd class="col-sm-9">@cliente.Telefono</dd>

        <dt class="col-sm-3">Dirección</dt>
        <dd class="col-sm-9">@cliente.Direccion</dd>

        <dt class="col-sm-3">Preferencias</dt>
        <dd class="col-sm-9">@cliente.Preferencias</dd>

        <dt class="col-sm-3">Fecha Registro</dt>
        <dd class="col-sm-9">@cliente.FechaRegistro.ToString("g")</dd>
    </dl>
    <a class="btn btn-secondary" href="/clientes">Volver</a>
}

@code {
    [Parameter] public int Id { get; set; }
    private Cliente cliente;

    protected override async Task OnInitializedAsync() =>
        cliente = await ClienteService.ObtenerPorId(Id);
}
